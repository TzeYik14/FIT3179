{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 500,
    "params": [
        {
            "name": "zoom_level",
            "value": 200,
            "bind": {
                "input": "range",
                "min": 100,
                "max": 200,
                "step": 10,
                "name":"Zoom: "
            }
        }
    ],
    
    "projection": {
        "type": "equalEarth",
        "scale": {"expr": "zoom_level"}  
    },
    "data" : {
        "url": "https://jieyiyew19.github.io/FIT3179/Data%20Visualisation%202/data/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    
    "transform": [
    
        {
            "lookup": "properties.NAME",
            "from": {
                "data": {
                    "url": "https://jieyiyew19.github.io/FIT3179/Data%20Visualisation%202/data/covid19-cleaned-data-final.csv"
                },
                "key": "location",
                "fields": ["total_cases", "population"]

            }
        },
        {"calculate": "datum.total_cases/datum.population * 10000", "as": "Confirmed per 10,000 population"}
    
    ],
    "mark": {"type": "geoshape",
             "stroke": "#757575",
             "strokeWidth":0.5},
    "encoding": {
        "color": {
            "field": "Confirmed per 10,000 population",
            "type": "quantitative",
            "scale": {
                "type": "threshold",
                "domain": [1,10,100],
                "range": ["#fdbe85", "#fd8d3c","#e6550d","#a63603"]
            }
        },
        
        
        "tooltip": [
            {"field": "properties.NAME","type": "nominal", "title": "Country"},
            {"field": "Confirmed per 10,000 population", "type":"quantitative", "title": "Confirmed cases (per 10,000 population)"}
        ]



      
    }

}