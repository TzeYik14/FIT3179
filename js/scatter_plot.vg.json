{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 500,
    "background": "lightgray",

    
    "data": {
        "url": "https://tzeyik14.github.io/FIT3179/data/suicide_rate_world_wide.csv"
    },
    "params": [
        {
            "name": "Continent_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "North America",
                    "South America",
                    "Europe",
                    "Africa",
                    "Asia",
                    "Oceania"
                ],
                "labels": [
                    "Show All",
                    "North America",
                    "South America",
                    "Europe",
                    "Africa",
                    "Asia",
                    "Oceania"
                ],
                "name": "Continent Selection: "
            }
        }
        
    ],
    "transform": [{"filter": "datum.total_cases > 0"}, 
    {"filter": "datum.total_deaths > 0"},
{
    "filter": "Continent_selection == null || datum.continent == Continent_selection"}
],
    "encoding": {
        "x" : {
            "field": "total_cases",
            "type" : "quantitative",
            
            "aggregate": "average",
            "title": "Average Confirmed Cases",
            "axis": {"tickCount": 6, "grid": false,"gridOpacity":0},
            "scale": {"type": "log", "domain": [1,100000000]}
        },
        "y" : {
            "field": "total_deaths",
            "type": "quantitative",
            "aggregate": "average",
            "title": "Average of Deaths",
            "axis": {"tickCount": 6, "grid": false,"gridOpacity":0},
            "scale": {"type": "log", "domain": [1,100000000]}
        }
    },
        "layer": [
            {
                "mark": "circle",
                "encoding": {
                    "size": {
                        "field": "population",
                        "title": "Population",
                        "type": "quantitative",
                        "scale": {
                            "type": "threshold",
                            "domain": [10000000,100000000,500000000,1000000000,5000000000],
                            "range": [10,60,160,210,350,500]
                        },
                        "legend": {"format": ".1s"}
                    },
                    "color": {
                        "field": "continent",
                        "title": "Continent",
                        "type": "nominal",
                        "scale": {
                            "domain": [
                                "Africa",
                                "Asia",
                                "North America",
                                "South America",
                                "Oceania",
                                "Europe"
                            ],
                            "scheme":"tableau10"                         
                        }
                    },
                    "opacity": {
                        "value": 1
                     },
                     "tooltip": [
                        {"field": "location", "type": "nominal", "title": "Country"},
                        {"field": "total_cases", "type": "quantitative","title": "Average Confirmed Cases","aggregate":"average", "format": ".0f"},
                        {"field": "total_deaths", "type": "quantitative", "title": "Average Deaths","aggregate":"average","format": ".0f"}
                    ]
                }
            },
            {
                "mark": {
                    "type": "text",
                    "align": "right",
                    "baseline": "middle",
                    "dx": -12,
                    "fontSize": 11.5,
                    "fontStyle": "italic"
                },
                "encoding": {
                    "text": {"field": "location", "type": "nominal"},
                    "color": {"value": "black"},
                    "opacity": {
                        "condition": {
                            "test": "datum['location'] == 'United States of America' || datum['location'] == 'India' || datum['location'] == 'Singapore'",
                            "value": 1
                        },
                        "value": 0
                    },
                    "tooltip": [
                        {"field": "location", "type": "nominal", "title": "Country"},
                        {"field": "total_cases", "type": "quantitative","title": "Average Confirmed Cases","aggregate":"average", "format": ".0f"},
                        {"field": "total_deaths", "type": "quantitative", "title": "Average Deaths","aggregate":"average","format": ".0f"}
                ]
            }
        }
    ],
    "config": {"view":{"stroke":"transparent"}}
}